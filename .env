# =========================
# General Application Settings
# =========================
NODE_ENV=development                   # Environment: development | production
PORT=3000                              # Server Port

# =========================
# Database Configuration
# =========================
REDIS_HOST=localhost                   # Redis host
REDIS_PORT=6379                        # Redis port
REDIS_PASSWORD=your_redis_password     # Redis password (if applicable)

# =========================
# Security Keys
# =========================
ENCRYPTION_KEY=your_32_byte_key        # AES-256 encryption key (32 bytes)
ENCRYPTION_IV=your_16_byte_iv          # AES-256 initialization vector (16 bytes)

# =========================
# Sentry Configuration
# =========================
SENTRY_DSN=your_sentry_dsn             # Sentry Data Source Name (DSN)

# =========================
# Blockchain Configuration
# =========================
BLOCKCHAIN_API_URL=your_blockchain_url # Blockchain API endpoint
BLOCKCHAIN_API_KEY=your_api_key        # Blockchain API key

# =========================
# Serverless Configuration
# =========================
SERVERLESS_API_URL=your_serverless_url # Serverless function API endpoint
SERVERLESS_API_KEY=your_api_key        # Serverless API key

# =========================
# Prometheus Metrics
# =========================
PROMETHEUS_PORT=9100                   # Port for Prometheus metrics scraping

# =========================
# AI Model Configuration
# =========================
DEFAULT_MODEL_NAME=default_model       # Name of the default AI model
AI_MODELS_DIR=models/                  # Directory for saving/loading AI models

# =========================
# Timeout and Retry Settings
# =========================
SERVERLESS_TIMEOUT=5000                # Timeout for serverless predictions (ms)
BLOCKCHAIN_RETRY_LIMIT=3               # Retry limit for blockchain logging

# =========================
# Logging and Debugging
# =========================
LOG_LEVEL=info                         # Log level: info | debug | warn | error

# =========================
# Miscellaneous
# =========================
APP_NAME=YourAppName                   # Application name
VERSION=1.0.0                          # Application version